{
	"name": "server",
	"version": "1.0.0",
	"description": "Manage and monitor game servers, providing admin controls and user management routes for seamless server operation.",
	"author": "Grave Keeper",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"clean": "rm -rf dist",
		"build": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/index.js --minify --packages=external",
		"rebuild": "npm run clean && npm run build",
		"dev": "tsx src/server.ts",
		"dev:watch": "tsx watch src/server.ts",
		"start": "node --enable-source-maps dist/index.js",
		"test": "vitest run",
		"format": "npx prettier --write ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gravesoulkeeper/cs-tracker.git"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.18.2",
		"multer": "^2.0.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/mongoose": "^5.11.96",
		"@types/multer": "^2.0.0",
		"esbuild": "0.27.2",
		"prettier": "^3.6.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
